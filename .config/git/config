[alias]
	aa = add --all
	ap = add --patch
	ci = commit -v
	co = checkout
	ctags = !.git/hooks/ctags
	dft = -c diff.external=difft diff# `git diff` with difftastic.
	dl = -c diff.external=difft log -p --ext-diff # `git log` with patches shown with difftastic.
	draw = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ds = -c diff.external=difft show --ext-diff # Show the most recent commit with difftastic.
	pf = push --force-with-lease
	st = status
	staash = stash --all
	up = !git push -u $(git-branch)
[apply]
	whitespace = warn
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[commit]
	template = ~/.gitmessage
	verbose = true
[core]
	autocrlf = input
	pager = diff-so-fancy | less --tabs=2 -RFX
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space
	# This may be causing rubocop to run on files that are just opened but not changed by vim. Needs to check.
	trustctime = false
[diff]
	renames = copies
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[help]
	autocorrect = 1
[http]
	postBuffer = 524288000
[interactive]
	diffFilter = diff-so-fancy --patch
[merge]
	log = true
[pull]
	rebase = true
[push]
	default = simple
	followTags = true
[rebase]
	autoSquash = true
[user]
	name = Daniel Santos Dantas
	email = daniel@sdantas.dev
