[user]
	name = Daniel Santos Dantas
	email = daniel@sdantas.dev
[push]
	default = simple
	followtags = true
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[alias]
	aa = add --all
	ap = add --patch
	ci = commit -v
	co = checkout
	pf = push --force-with-lease
	st = status
	ctags = !.git/hooks/ctags
	draw = log --graph --decorate --pretty=oneline --abbrev-commit --all
	up = !git push -u $(git-branch)
	staash = stash --all
	dft = difftool
	dlog = -c diff.external=difft log -p --ext-diff
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	pager = diff-so-fancy | less --tabs=2 -RFX
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space
	trustctime = false
[interactive]
  diffFilter = diff-so-fancy --patch
[commit]
	template = ~/.gitmessage
	verbose = true
[fetch]
	prune = true
[rebase]
	autosquash = true
[http]
	postBuffer = 524288000
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[hub]
	protocol = ssh
[pull]
	rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[merge]
	log = true
[help]
	autocorrect = 1
[apply]
	whitespace = warn
[diff]
	renames = copies
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
